<!-- Os comentarios devem ter espacos no inicio e no fim, para -->
<!-- separar dos hifens -->
<!-- Nao devem ser usados caracteres especiais (p.ex. acentos) -->
<!-- Todas as tags e atributos sao obrigatorios, exceto onde for -->
<!-- referido o contrario -->

<yaf>
    
    <!-- bloco de configuracoes globais -->
    <!-- a declaracao dos atributos deste bloco e' obrigatoria -->
    <!-- Valores para draw mode: "fill" , "line", "point" -->
    <!-- Valores para shading: "flat", "gouraud" ) -->
    <!-- Valores para cullface: "none", "back" , "front" ou "both" -->
    <!-- Valores para cullorder : "CCW" ou "CW" -->
    <globals background="2.0 1.0 3.4 5.5" drawmode="fill" shading="flat" cullface="none" cullorder="CW" />
    
    <!-- bloco de camaras: o atributo "initial" identifica a camara/ponto de vista inicial -->
    <cameras initial="one" >
        <!-- tem de existir, pelo menos uma camara dos tipos seguintes (perspective ou ortho) -->
         <perspective id="one" near="4.0" far="2.0" angle="30.0" pos="4.0 2.0 1.0" target="3.0 3.0 2.0" />
        <ortho id="two" near="2.0" far="5.0" left="4.0" right="2.0" top="3.0" bottom="4.0" />
        
    </cameras>
    
    
    <!-- bloco de iluminacao; segue os parametros do OpenGL -->
    <lighting doublesided="true" local="false" enabled="true" ambient="10 5 2 3" >
        <!-- Deve existir pelo menos um dos seguintes blocos: omin ou spot -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <omni id="s0" enabled="true"
        location="10 5 2 3"
        ambient="10 54 2 3"
        diffuse="10 5 2 3"
        specular="10 5 2 3"
        />
        
        <spot id="s1" enabled="true"
        location="10 5 2 5"
        ambient="10 5 2 3"
        diffuse="10 5 2 3"
        specular="10 5 2 3"
        angle="10"
        exponent="12"
        direction="10 5 2"
        />
        
    </lighting>
    
    <!-- bloco de texturas. Este bloco tem de existir mas pode estar vazio, se nao forem usadas texturas -->
    <textures>
        <texture id="ss" file="ss" />
    </textures>
    
    <!-- bloco de materiais; -->
    <appearances>
        <!-- deve existir um ou mais blocos "appearance" -->
        <!-- IMPORTANTE: -->
        <!--   textureref, texlength_s e textlength_t sao atributos -->
        <!--   opcionais se for usada uma textura. -->
        <!--   ver topico 'Notas finais' no enunciado sobre os -->
        <!--   parametros texlength_...) -->
        <appearance id="ss"
        emissive="1.0 1.0 1.0 1.0"
        ambient="1.0 1.0 1.0 1.0"
        diffuse="1.0 1.0 1.0 1.0"
        specular="1.0 1.0 1.0 1.0"
        shininess="1.0"
        textureref="ss"
        texlength_s="1.0"
        texlength_t="1.0" />
    </appearances>
    
	<graph rootid="root">
        <node id="root">
            <transforms>
            </transforms>
            <children>
                <noderef id="floor" />
                <noderef id="walls" />
                <noderef id="objects" />
            </children>
        </node>
        <node id="floor">
            <transforms>
            	<translate to="0 0.0 1.0" />
            	<scale factor="30.0 1.0 20.0" />
            	<rotate axis="x" angle="90"/>
            </transforms>
            <appearanceref id="ss" />
            <children>
               <noderef id="unit_rectangle" />
            </children>
        </node>
        <node id="walls">
            <transforms>
            </transforms>
            <children>
                <noderef id="wall1" />
                <noderef id="wall2" />
            </children>
        </node>
        <!-- xy plane wall -->
        <node id="wall1">
            <transforms>
            	<scale factor="30.0 20.0 0.0" />
            </transforms>
            <appearanceref id="ss" />
            <children>
                <noderef id="wall" />
            </children>
        </node>
        <!-- zy plane wall -->
        <node id="wall2">
            <transforms>
            	<scale factor="20.0 1.0 30.0" />
            	<rotate axis="y" angle="-90"/>
            </transforms>
            <appearanceref id="ss" />
            <children>
                <noderef id="wall" />
            </children>
        </node>
        <node id="wall">
            <transforms>
            </transforms>
            <appearanceref id="ss" />
            <children>
                <noderef id="unit_rectangle" />
            </children>
        </node>
        
        <node id="objects">
            <transforms>
            </transforms>
            <appearanceref id="ss" />
            <children>
                <noderef id="tableA" />
            </children>
        </node>
        <!-- TableA will have 4 legs 6x4-->
