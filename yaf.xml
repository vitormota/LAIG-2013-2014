            </transforms>
            <appearanceref id="ss" />
            <children>
                <rectangle xy1="0.0 0.0" xy2="1.0 1.0" />
            </children>
        </node>
        <node id="unit_cube">
            <transforms>
                <scale factor="1.0 1.0 4.0" />
            </transforms>
            <appearanceref id="ss" />
            <children>
                <noderef id="side1" />
                <noderef id="side2" />
                <noderef id="side3" />
                <noderef id="side4" />
                <noderef id="side5" />
                <noderef id="side6" />
            </children>
        </node>
        <node id="unit_rectangle">
            <transforms>
            </transforms>
            <appearanceref id="ss" />
            <children>
                 <rectangle xy1="0.0 0.0" xy2="1.0 1.0" />
            </children>
        </node>
        
