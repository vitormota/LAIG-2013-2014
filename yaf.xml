                <noderef id="unit_cube" />
            </children>
        </node>
        <node id="side1">
            <transforms>
                <rotate axis="y" angle="90" />
            </transforms>
            <appearanceref id="ss" />
            <children>
                <rectangle xy1="0.0 0.0" xy2="1.0 1.0" />
            </children>
        </node>
        <node id="side2">
            <transforms>
